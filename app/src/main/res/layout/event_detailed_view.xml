<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detailedViewPic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/photo"
        android:layout_alignParentTop="true"
        android:src="@drawable/beach"
        android:layout_marginLeft="0sp"
        android:layout_marginRight="0sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_title_eventdetails"
        android:textSize="30sp"
        android:layout_alignTop="@id/photo"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:text="Type in Event Name"
        android:imeOptions="actionDone"
        />
    </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detailedView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#D3D3D3"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEBE9"
            android:weightSum="1"
            >



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.60">




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#878787"
                    android:textSize="16sp"
                    android:id="@+id/address_of_detailedevent"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="16dp"
                />

                <View
                    android:id="@+id/cardDivider"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D4D4D4"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#878787"
                    android:textSize="12sp"
                    android:id="@+id/date_of_detailedevent"
                    android:paddingTop="25dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="16dp"
                    />

            </LinearLayout>
            <View
                android:id="@+id/cardDividerHorizontal"
                android:layout_width="2dp"
                android:layout_height="150dp"
                android:background="#D4D4D4"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D4D4D4"
                    android:textSize="14sp"
                    android:id="@+id/left_text_button2"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_text_button2"
                    android:textColor="#4B0082"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>